<view class='search'>
  <icon class='icon-class' size="12px" type="search"></icon>
  <input 
  class="input" 
  placeholder='{{inputHint}}' 
  bindconfirm='{{confirmTap}}' 
  style='padding-left:12rpx;' 
  bindinput='inputListener' 
  bindconfirm='inputConfirm' 
  value='{{inputValue}}' 
  type='{{inputType}}' 
  password='{{isPassword}}' 
  confirm-type='{{confirmType}}'>
  </input>
  <icon size="16px" bindtap='clearTap' class="{{isClearShow?'clearImgShow':'clearImgHide'}}" type="clear"></icon>
</view>